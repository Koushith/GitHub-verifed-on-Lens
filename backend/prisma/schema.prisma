// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  bio        String?
  isVerified Boolean
  intrests   Json?
}

model Intrests {
  id      Int     @id @default(autoincrement())
  intrest String?
}

model Jobs {
  id             Int      @id @default(autoincrement())
  position       String
  companyName    String
  location       String
  experience     String
  postedOn       DateTime
  jobDescription String
}
